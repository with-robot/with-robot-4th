<mujoco model="simple_panda">
  <option timestep="0.002" gravity="0 0 -9.81"/>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.4 0.6 0.8" rgb2="0.1 0.2 0.3" width="512" height="512"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3" markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true"/>
  </asset>

  <worldbody>
    <light directional="true" pos="0 0 3" dir="0 0 -1"/>
    <geom name="floor" size="10 10 0.1" type="plane" material="groundplane"/>

    <!-- Mobile base (holonomic) -->
    <body name="mobile_base" pos="0 0 0.1">
      <geom name="base_box" size="0.3 0.2 0.1" type="box" rgba="0.7 0.7 0.7 1"/>
      <joint name="mobilebase0_joint_mobile_side" type="slide" axis="1 0 0" limited="false"/>
      <joint name="mobilebase0_joint_mobile_forward" type="slide" axis="0 1 0" limited="false"/>
      <joint name="mobilebase0_joint_mobile_yaw" type="hinge" axis="0 0 1" limited="false"/>
    </body>
  </worldbody>

  <actuator>
    <velocity name="mobilebase0_actuator_mobile_side" joint="mobilebase0_joint_mobile_side" kv="1000" ctrlrange="-1.0 1.0" forcelimited="true" forcerange="-600 600"/>
    <velocity name="mobilebase0_actuator_mobile_forward" joint="mobilebase0_joint_mobile_forward" kv="1000" ctrlrange="-1.0 1.0" forcelimited="true" forcerange="-600 600"/>
    <velocity name="mobilebase0_actuator_mobile_yaw" joint="mobilebase0_joint_mobile_yaw" kv="1500" ctrlrange="-1.5 1.5" forcelimited="true" forcerange="-600 600"/>
  </actuator>
</mujoco>
